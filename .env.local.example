# Non-secret local config. Copy to ".env.local" and edit as needed.
# (Secrets go in .env; see .env.example)

# Phase 1: OCR / geometry (optional)
OCR_ENABLED=0
OCR_LANGS=eng
OCR_DPI=300
# TESSERACT_EXE=C:\Program Files\Tesseract-OCR\tesseract.exe

# Vision rails (preferred when available)
VISION_RAILS_DEFAULT=1
VISION_RAILS_FORCE=0
VISION_RAILS_DISABLE=0
VISION_RASTER_SCALE=2.0
VISION_XGAP_SPLIT=1
VISION_XGAP_RATIO=0.38

# Rails policy
RAILS_REQUIRED=1

# Phase 2: LLM span citations (primary)
OPENAI_MODEL=gpt-5-mini
OPENAI_BASE_URL=https://api.openai.com

# Demo server (optional)
DEMO_HOST=127.0.0.1
DEMO_PORT=8000
